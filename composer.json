{
  "name": "wp-crm/wp-crm",
  "type": "wordpress-plugin",
  "minimum-stability": "dev",
  "homepage": "https://www.usabilitydynamics.com/product/wp-crm/",
  "author": {
    "name": "UsabilityDynamics, Inc.",
    "url": "https://www.usabilitydynamics.com"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://repository.usabilitydynamics.com"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/wp-crm/wp-crm.git"
  },
  "require": {
    "php": ">=5.3",
    "usabilitydynamics/lib-ui": "0.3.4",
    "usabilitydynamics/lib-utility": "0.3.7",
    "usabilitydynamics/lib-wp-bootstrap": "1.2.1",
    "usabilitydynamics/lib-ud-api-client": "1.1.5.1"
  },
  "require-dev": {
    "codeclimate/php-test-reporter": "dev-master"
  },
  "autoload": {
    "classmap": [ "lib/classes" ]
  },
  "archive": {
    "exclude": [
      "node_modules",
      ".gitignore",
      "test",
      "circle.yml",
      "composer.lock",
      "gruntfile.js",
      "package.json"
    ]
  },
  "extra": {
    "featureFlags": [
      {
        "name": "Google Visualization",
        "option": "enable_google_visualization",
        "constant": "WP_CRM_VISUALIZATION",
        "description": "Google graph visualization on overview page.",
        "since": "1.1.0",
        "enabled": false
      },
      {
        "name": "Color Schemes",
        "option": "enable_user_color_schems",
        "constant": "WP_CRM_ENABLE_USER_COLOR_SCHEMES",
        "description": "Color scheme selector on editor.",
        "since": "1.1.0",
        "enabled": false
      },
      {
        "name": "Ace Editor",
        "option": "enable_ace_editor",
        "constant": "WP_CRM_ENABLE_ACE_EDITOR",
        "description": "Legacy rich-test editor.",
        "since": "1.1.0",
        "enabled": false
      },
      {
        "name": "Disable Dashboard Splash Page",
        "option": "disable_dashboard_splash_page",
        "constant": "WP_CRM_DISABLE_DASHBOARD_SPLASH",
        "description": "UD splash disabled.",
        "since": "1.1.0",
        "enabled": true
      }
    ],
    "splashes": {
      "install": "static/splashes/install.php"
    },
    "schemas": {
      "dependencies" : {
        "modules": {},
        "plugins": []
      },
      "licenses" : {
        "client" : {
          "slug": "wp-crm/wp-crm",
          "screen": {
            "parent": "wp_crm",
			"page_title": "l10n.licenses_page_title",
            "menu_title": "l10n.licenses_menu_title"
          }
        },
        "product" : false
      }
    }
  }
}